version: "3.9"
services:
  click_counter_api:
    build: .
    ports:
      - "5010:5000"
    environment:
      - ConnectionStrings__DefaultConnection=Server=sqlserver,1433;Database=CountsDb;uid=SA;Password=Your_password123;
    depends_on:
     - sqlserver
  sqlserver:
    image: "mcr.microsoft.com/mssql/server:2019-CU13-ubuntu-20.04"
    environment:
      SA_PASSWORD: "Your_password123"
      ACCEPT_EULA: "Y"